<!DOCTYPE html>
<htmL>
    <head>
        <title> CART </title>
    </head>
    <style>
        .nava {
            border: 1px solid black; 
            border-radius: 7px; 
            background-color: green; 
            color: white;
            cursor: pointer;
            padding: 5px 3px;
            text-decoration: none;
        }
        .btna {
            background-color: gray;
            border: 1px solid black;
            border-radius: 3px;
            color: black;
            cursor: pointer;
            padding: 1px 3px;
            text-decoration: none;
        }
        body{
            align-content: center;
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            /* padding-left: 170px; */
            padding-top: 0px;
            background-image: url("img2.jpeg");
            background-size: 100%;
        }
        th{
            color: white;
            font-weight: bold;
            padding: 7px;
            width: auto;
        }
        @keyframes blink {
            0% {
              opacity: 1;
            }
            100% {
              opacity: 0;
              color:rgb(128, 90, 40);
            }
          }
          
    </style>
    <body>
       <div class = "container">
            <form action = "/checkout" method = "GET">
                <center>
                    <h1 class = "blinkeffect" style = "font-weight: bold;"> 
                        YOUR CART
                        <i class="bi bi-cart-fill"> </i><br>
                        <code style="font-size: small;">Item(s) Added to Cart Successfully!</code>
                    </h1>
                    <a class="nava" href="/homepage">Back To Menu</a>
                </center>
                <center>
                    <div class = "cart" style = "padding-top: 10px; border-radius: 4%;">
                        <table class = "table" cellpadding="2" cellspacing="16" style="border: 2px solid; background-color: rgb(128, 90, 40);">
                            <tr>
                                <th>itemname</th>
                                <th>price </th>
                                <!-- <th>Remove Item(s)</th> -->
                                <!-- <th>Total price</th> -->
                            </tr>
                            <% let totalcost = total %>
                                <% cartItems.forEach((item)=> { %>
                                    <tr>    
                                        <% let itemname = item.data().itemname %>
                                        <% let itemcost = item.data().itemcost %>
                                        <td><%= itemname %></td>
                                        <td><%= itemcost %></td>
                                        <td style="text-align: center;">
                                            <a class="btna" href="/removeItem/<%= item.id %>">Remove</a>
                                            </td>
                                    </tr>     
                                <% }) %>                       
                                <tr>
                                    <td style="border: none;"><b>Total: </b></td>    
                                    <td style="border: none;"><%= totalcost %></td>
                                </tr>
                                <tr style="text-align: center;">
                                    <td colspan="3">
                                        <button style="cursor: pointer;" type="submit"> Checkout </button>
                                    </td>
                                </tr>
                        </table>
                        
                        <br>
                        <b style = "color:rgb(128, 90, 40);">Enjoy shopping<i class="bi bi-emoji-smile"></i> Buy Again!!!</b>
                    </div>
                </center>
            </form>
        </div>
    </body>
</html>